@model Company



<form method="post" asp-action="Upsert" enctype="multipart/form-data">
    <input asp-for="Id" hidden />
    <div class="row">
        <div class="col-10">
            <div class="border p-3 mt-4 row">
                <div class="col-12 pb-2">
                    <h2 class="text-primary">@(Model.Id != 0 ? "Edit" : "Create") Company</h2>
                </div>
                @*    <div asp-validation-summary="All"></div> *@
                <div class="mb-3">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Address"></label>
                    <input asp-for="Address" class="form-control"></input>
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="mb-2 col-6">
                    <label asp-for="City"></label>
                    <input asp-for="City" class="form-control" />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
                <div class="mb-2 col-6">
                    <label asp-for="State"></label>
                    <input asp-for="State" class="form-control" />
                    <span asp-validation-for="State" class="text-danger"></span>
                </div>

                <div class="mb-2 col-6">
                    <label asp-for="PostalCode"></label>
                    <textarea asp-for="PostalCode" class="form-control"></textarea>
                    <span asp-validation-for="PostalCode" class="text-danger"></span>
                </div>
                <div class="mb-2 col-6">
                    <label asp-for="PhoneNo"></label>
                    <textarea asp-for="PhoneNo" class="form-control"></textarea>
                    <span asp-validation-for="PhoneNo" class="text-danger"></span>
                </div>
                <div class="col-12">
                    @if (Model.Id != 0)
                    {
                        <button type="submit" class="btn btn-primary" style="width:150px">Edit</button>
                    }
                    else
                    {
                        <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
                    }
                    <a asp-controller="Company" asp-action="Index" class="btn btn-secondary" style="width:150px">Back to List</a>
                </div>
            </div>
        </div>
       
    </div>
   
</form>

@section scripts {
    @{
            <partial name="_ValidationScriptsPartial" />
    }
}