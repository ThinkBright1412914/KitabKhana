@model IEnumerable<KitabKhana.Model.Category>
@{
    ViewData["Title"] = "Index";
}


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-patch-plus"></i>&nbsp; Create Catagory
            </a>
        </div>
    </div>

    <br />
    <br />


    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th class="text-dark">Category Name</th>
                <th class="text-dark">Display Order</th>
                <th></th>
            </tr>

        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-dark" width="50%" t>
                        @item.Name
                    </td>
                    <td class="text-dark" width="40%">
                        @item.DisplayOrder
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary mx-2 edit"><i class="bi bi-pencil">Edit</i></a>
                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mx-2"><i class="bi bi-x-octagon">Delete</i></a>
                        </div>
                    </td>

                </tr>
            }
        </tbody>


    </table>

</div>